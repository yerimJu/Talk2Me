<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hanium.talktome">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <meta-data
            android:name="com.instagram.instagramapi.InstagramAppClientId"
            android:value="7990b1d8643348f88137fc8b62140062" />

        <meta-data
            android:name="com.instagram.instagramapi.InstagramAppRedirectURL"
            android:value="http://instagramapi/oauth/" />

        <meta-data android:name="io.fabric.ApiKey" android:value="06bac5f8a930e4dd51dbe074e517d03ae49f42bb"/>

        <activity android:name=".MainActivity">
        </activity>
        <activity android:name=".LoginActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"/>

        <activity android:theme="@style/Theme.AppCompat.NoActionBar" android:name=".Login2Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:theme="@style/Theme.AppCompat.NoActionBar" android:name=".JoinActivity"/>
        <activity android:theme="@style/Theme.AppCompat.NoActionBar" android:name=".PwFindRequestActivity"/>
        <activity android:theme="@style/Theme.AppCompat.NoActionBar" android:name=".IdFindRequestActivity"/>
        <activity android:theme="@style/Theme.AppCompat.NoActionBar" android:name=".SettingActivity" />
        <activity android:theme="@style/Theme.AppCompat.NoActionBar" android:name=".activities.InstagramAuthActivity"/>
    </application>

</manifest>