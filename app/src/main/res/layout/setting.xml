<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!-- 타이틀 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#74bfc8"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="환경설정" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ecf0f1"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="15.5dp"
        android:paddingRight="15.5dp"
        android:paddingTop="8dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/img_contentsbg"
            android:orientation="vertical"
            android:paddingLeft="17dp"
            android:paddingRight="17dp">

           <!--계정관리-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="27.5dp"
                android:layout_marginTop="5.5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="계정관리"
                    android:textSize="20dp"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#d3dce5" />

            <!-- Noti_0 -->
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/img_infobg"
                android:gravity="center_vertical"
                android:text="SNS 계정 연동"
                android:textColor="#7b828b"
                android:textSize="15sp"
                android:id="@+id/btn_snsconect"
                android:onClick="mOnClick"/>

            <!-- Noti_1 -->
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/img_infobg"
                android:gravity="center_vertical"
                android:text="게시물 관리"
                android:textColor="#7b828b"
                android:textSize="15sp"
                android:id="@+id/postManage"
                android:onClick="mOnClick"/>

            <!-- Noti_2 -->
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/img_infobg"
                android:gravity="center_vertical"
                android:text="내 프로필 수정"
                android:id="@+id/modifyProfile"
                android:onClick="mOnClick"
                android:textColor="#7b828b"
                android:textSize="15sp" />

            <!-- Noti_3 -->
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/img_infobg"
                android:gravity="center_vertical"
                android:text="회원탈퇴"
                android:id="@+id/outMember"
                android:onClick="mOnClick"
                android:textColor="#7b828b"
                android:textSize="15sp" />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#d3dce5" />

            <!--알림 설정 관리-->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="27.5dp"
                android:layout_marginTop="5.5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="알림 설정"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#d3dce5" />

            <!-- Noti_1 -->
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/img_infobg"
                android:gravity="center_vertical"
                android:text="키워드 알림 설정"
                android:id="@+id/btn_keyword"
                android:onClick="mOnClick"
                android:textColor="#7b828b"
                android:textSize="15sp" />

            <!-- Noti_2 -->
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/img_infobg"
                android:gravity="center_vertical"
                android:text="우선순위 그룹 설정"
                android:id="@+id/btn_group"
                android:onClick="mOnClick"
                android:textColor="#7b828b"
                android:textSize="15sp" />

            <!-- Noti_3 -->
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/img_infobg"
                android:gravity="center_vertical"
                android:text="시간 여행 설정"
                android:id="@+id/btn_time"
                android:onClick="mOnClick"
                android:textColor="#7b828b"
                android:textSize="15sp" />

            <!-- Noti_4 -->
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/img_infobg"
                android:gravity="center_vertical"
                android:text="방해금지 모드 설정"
                android:id="@+id/btn_noring"
                android:onClick="mOnClick"
                android:textColor="#7b828b"
                android:textSize="15sp" />





            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#d3dce5" />


<!--이벤트관리-->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="27.5dp"
                android:layout_marginTop="5.5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="이벤트"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#d3dce5" />

            <!-- Noti_1 -->
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/img_infobg"
                android:gravity="center_vertical"
                android:text="이벤트"
                android:id="@+id/event"
                android:onClick="mOnClick"
                android:textColor="#7b828b"
                android:textSize="15sp" />






            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#d3dce5" />


            <!-- 고객지원 -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="27.5dp"
                android:layout_marginTop="5.5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="고객지원"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#d3dce5" />

            <!-- Noti_1 -->
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/img_infobg"
                android:gravity="center_vertical"
                android:text="공지사항"
                android:id="@+id/notice"
                android:onClick="mOnClick"
                android:textColor="#7b828b"
                android:textSize="15sp" />

            <!-- Noti_2 -->
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/img_infobg"
                android:gravity="center_vertical"
                android:text="FAQ"
                android:id="@+id/faq"
                android:onClick="mOnClick"
                android:textColor="#7b828b"
                android:textSize="15sp" />

            <!-- Noti_3 -->
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/img_infobg"
                android:gravity="center_vertical"
                android:text="고객센터"
                android:id="@+id/callCenter"
                android:onClick="mOnClick"
                android:textColor="#7b828b"
                android:textSize="15sp" />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#d3dce5" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="27.5dp"
                android:layout_marginTop="5.5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="정보"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#d3dce5" />

            <!-- Noti_1 -->
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/img_infobg"
                android:gravity="center_vertical"
                android:text="이용약관"
                android:id="@+id/rule"
                android:onClick="mOnClick"
                android:textColor="#7b828b"
                android:textSize="15sp" />

            <!-- Noti_2 -->
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/img_infobg"
                android:gravity="center_vertical"
                android:text="개인정보 취급방침"
                android:id="@+id/dealInfo"
                android:onClick="mOnClick"
                android:textColor="#7b828b"
                android:textSize="15sp" />

            <!-- 여백 -->
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30sp"
                android:layout_marginTop="5dp"/>




        </LinearLayout>

</ScrollView>
    </LinearLayout>



</LinearLayout>
